
body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-family helvetica, sans-serif
  font-size 1rem
  
h1
  font-family helvetica, sans-serif;
  font-weight normal
  margin 0
  font-size 1.5rem
  @media screen and (max-width: 800px) {
    font-size 1.5rem
  }


h2,h3,h4,h5,h6
  font-weight normal
  font-family helvetica, sans-serif

h2
  margin-top 0
  margin-bottom 1rem
  font-size 3rem
  color white
  font-weight bold
  max-width 800px
  @media screen and (max-width: 800px) {
    font-size 2rem
  }

h3
  font-size 1.5rem
  margin 0
  color white
  @media screen and (max-width: 800px) {
    font-size 1.25rem
  }

h4
  font-size 2.75rem
  margin 0 0 1rem 0
  font-weight bold
  color #333
  max-width 800px
  @media screen and (max-width: 800px) {
    font-size 2.5rem
  }

h5
  font-size 2.5rem
  width 100%
  margin 0
  @media screen and (max-width: 800px) {
    font-size 2rem
  }

p
  width 100%
  margin 2rem 0 0 0
  font-weight bold
  font-size 1.25rem
  @media screen and (max-width: 800px) {
    font-size 1.25rem
  }
