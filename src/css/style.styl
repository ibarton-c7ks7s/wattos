// Import all partials
@require './_*.styl'

.top
    position fixed
    top 2rem
    right 2rem
    color white
    font-wight 700
    z-index 1

    @media screen and (max-width: 800px) {
        position absolute
    }

.ships 
    display flex
    flex-wrap wrap
    align-items center
    justify-content center
    height 100vh
    
    .ship 
        background-size cover
        background-color #111
        display flex
        justify-content flex-end
        flex-direction column
        padding 4rem
        cursor pointer
        transition all 0.2s
        min-width 100vw
        min-height 400px
        height 50vh
        backface-visibility hidden
        outline none
        border none
        @media screen and (max-width: 800px) {
            padding 2rem
        }
        &:hover
            opacity 0.85
