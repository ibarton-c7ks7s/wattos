.ship-detail
    min-height 100vh
    position relative
    transition all 0.2s ease-in-out
    position relative

    .ship-image
        position fixed
        height 100vh
        width 50%
        padding 4rem
        background-size cover
        background-color #333
        overflow hidden
        @media screen and (max-width: 800px) {
            height 80vh
            position relative
            width 100%
            padding 1rem
        }

        .back 
            color white
            text-decoration none
            transition all 0.2s
            font-weight bold
            font-size 2.5rem
            &:hover 
                opacity 0.8
                .arrow
                    margin-right 5px
                    margin-left -5px

            .arrow
                margin-right 0px
                margin-left 0

    .ship-specs 
        width 50%
        margin-left 50%
        padding 4rem
        @media screen and (max-width: 800px) {
            margin-left 0
            width 100%
            padding 1rem
        }

        h5
            &:empty
                &:before
                    content 'n/a'

        .line
            height 1rem
            width 20%
            background linear-gradient(25deg, #7d62cc, #5179cc)

        .buy
            color: white
            padding 2rem 4rem
            margin 4rem 0 0 0
            cursor pointer
            font-weight bold
            border none
            outline 0
            background linear-gradient(25deg, #7d62cc, #5179cc)
            transition all 0.2s
            @media screen and (max-width: 800px) {
              font-size 1.5rem
              margin 2rem 0 2rem 0
            }
            &:hover 
                background linear-gradient(25deg, #7d62cc, #5179cc)
                transform scale(1.1)

            &[disabled]
                opacity 0.5
                cursor default

                &:hover
                    background linear-gradient(25deg, #7d62cc, #5179cc)
                    transform scale(1)
